<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ad_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@layout/menu_item"
        android:orientation="vertical"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <ImageView
                android:id="@+id/native_ad_icon"
                android:layout_width="@dimen/row_xl"
                android:layout_height="@dimen/row_xl"
            android:layout_marginLeft="@dimen/margin_xl"
            android:layout_marginRight="@dimen/margin_xl"
                android:contentDescription="@string/icon_desc"
                />

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                >

            <TextView
                    android:id="@+id/native_ad_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="@dimen/text_l"
                    />

            <TextView
                    android:id="@+id/native_ad_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                android:textColor="@android:color/white"
                        android:textSize="@dimen/text_m"
                    />

        </LinearLayout>

    </LinearLayout>

    <com.facebook.ads.MediaView
            android:id="@+id/native_ad_media"
            android:layout_width="match_parent"
                    android:layout_height="@dimen/row_xx"
            android:contentDescription="@string/image_desc"
            android:gravity="center"
            android:visibility="gone"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

        <TextView
                android:id="@+id/native_ad_social_context"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:ellipsize="end"
                android:lines="2"
                android:paddingRight="5dp"
            android:textColor="@android:color/white"

                android:textSize="@dimen/text_s"
                />

        <Button
                android:id="@+id/native_ad_call_to_action"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
            android:textColor="@android:color/white"
                android:textSize="@dimen/text_m"
                android:visibility="visible"
                />

    </LinearLayout>

</LinearLayout>
